<div id="login_form">
  <div class="notice">  <%= raw notice %></div>
  <%= form_tag({:controller => 'users', :action => 'login'}) do %>
      <%= label_tag :username, 'Username:' %><%= text_field_tag('username', '') %>
      <%= label_tag :password, 'Password:' %><%= password_field_tag('password', '') %>
      <%= submit_tag 'Submit' %>
  <% end %>

</div>