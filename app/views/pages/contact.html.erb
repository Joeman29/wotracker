<h1>Contact Us</h1>
<div class="notice"><%= notice %></div>
<% if @message.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</h2>

  <ul>
    <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
  </ul>
</div>
    <% end %>
<%= form_for @message do |f| %>
    <table>
    <tr><td>    <%= f.label :name, 'Your name:*' %><br><span class="help-text">Required</span></td>
      <td><%= f.text_field :name %>
    </td></tr>
    <tr class="field">    <td><%= f.label :subject, 'Subject:' %><br><span class="help-text">Subject line for your email</span></td>
      <td><%= f.text_field :subject %></td>
    </tr>
    <tr class="field">    <td><%= f.label :email, 'Your email:*' %><br><span class="help-text">Required</span></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :content, 'Your message:*' %><br><span class="help-text">Required, must be between 10 and 500 characters</span></td>
      <td><%= f.text_area :content, size:'50x6' %></td>
    </tr>
    <tr><td><%= f.submit 'Send Message' %></td><td></td></tr></table>
<% end %>